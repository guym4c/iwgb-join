{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://join.iwgb.org.uk/config/schema/sorter-results.config.schema.json",
    "title": "Sorter results",
    "description": "Maps applicant sorter form results to branches and membership types",
    "type": "object",
    "additionalProperties": false,
    "definitions": {
        "sorter-result": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "description": {
                    "description": "Optionally, describe what this sorter result is for",
                    "type": "string"
                },
                "form-id": {
                    "description": "The Typeform form ID",
                    "$ref": "utils.schema.json#/definitions/typeform-form-id"
                },
                "question-id": {
                    "description": "The Typeform question ID",
                    "type": "string",
                    "pattern": "^[a-zA-Z0-9]{12}$"
                },
                "condition": {
                    "description": "The required answer to the question",
                    "type": "string"
                },
                "plan-id": {
                    "description": "The Airtable plan ID",
                    "$ref": "utils.schema.json#/definitions/airtable-id"
                }
            },
            "required": ["form-id", "question-id", "condition", "plan-id"]
        }
    },
    "properties": {
        "sorter-results": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/sorter-result"
            }
        }
    }
}