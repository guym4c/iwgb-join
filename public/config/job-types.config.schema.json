{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://join.iwgb.org.uk/config/schema/job-types.config.schema.json",
    "title": "Job Types",
    "description": "IWGB application job types",
    "type": "object",
    "additionalProperties": false,
    "definitions": {
        "job-type": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "slug": {
                    "description": "URL slug to create an application with this job type",
                    "$ref": "utils.schema.json#/definitions/id"
                },

                "typeform-id": {
                    "description": "The ID of the Typeform associated with this job type",
                    "type": "string",
                    "pattern": "^[a-zA-Z0-9]{6}$"
                },
                "bypass-sorter": {
                    "description": "If no sorting questions are required, the applicant can be directed straight to the core questions form",
                    "type": "boolean"
                },
                "branch-id": {
                    "description": "If the job type bypasses the sorter, what branch ID are they assigned to",
                    "$ref": "utils.schema.json#/definitions/id"
                },
                "membership-id": {
                    "description": "If the job type bypasses the sorter, what membership type ID are they assigned to",
                    "$ref": "utils.schema.json#/definitions/id"
                }
            },
            "oneOf": [
                {
                    "required": ["slug", "typeform-id"]
                },
                {
                    "required": ["slug", "bypass-sorter", "branch-id", "membership-id"]
                }
            ]
        }
    },
    "properties": {
        "job-types": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/job-type"
            }
        }
    }
}